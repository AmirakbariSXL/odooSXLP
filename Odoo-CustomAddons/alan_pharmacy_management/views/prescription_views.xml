<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- PRESCRIPTION VIEWS -->
    <record id="view_alan_prescription_list" model="ir.ui.view">
        <field name="name">alan.pharma.prescription.list</field>
        <field name="model">alan.pharma.prescription</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_alan_prescription_form" model="ir.ui.view">
        <field name="name">alan.pharma.prescription.form</field>
        <field name="model">alan.pharma.prescription</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" type="object" string="Confirm"/>
                    <button name="action_dispense" type="object" string="Dispense"/>
                    <button name="action_set_draft" type="object" string="Set to Draft"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="date"/>
                        <field name="state"/>
                    </group>
                    <notebook>
                        <page string="Medicines">
                            <field name="line_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="medicine_id"/>
                                    <field name="batch_id"/>
                                    <field name="qty"/>
                                    <field name="dose"/>
                                    <field name="frequency"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="note"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_alan_prescription" model="ir.actions.act_window">
        <field name="name">Prescriptions</field>
        <field name="res_model">alan.pharma.prescription</field>
        <field name="view_mode">list,form</field>
    </record>
    <menuitem id="menu_pharmacy_prescriptions" name="Prescriptions" parent="menu_pharmacy_root"
              action="action_alan_prescription"/>

</odoo>