<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- BATCH VIEWS -->
    <record id="view_alan_batch_list" model="ir.ui.view">
        <field name="name">alan.pharma.batch.list</field>
        <field name="model">alan.pharma.batch</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="medicine_id"/>
                <field name="quantity"/>
                <field name="expiry_date"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <record id="view_alan_batch_form" model="ir.ui.view">
        <field name="name">alan.pharma.batch.form</field>
        <field name="model">alan.pharma.batch</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="medicine_id"/>
                        <field name="quantity"/>
                        <field name="mfg_date"/>
                        <field name="expiry_date"/>
                        <field name="lot_barcode"/>
                    </group>
                    <group>
                        <field name="cost_price"/>
                        <field name="selling_price"/>
                    </group>
                    <footer>
                        <button name="action_mark_expired" type="object" string="Mark Expired"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_alan_batch" model="ir.actions.act_window">
        <field name="name">Batches</field>
        <field name="res_model">alan.pharma.batch</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_pharmacy_batches" name="Batches" parent="menu_pharmacy_root" action="action_alan_batch"/>

</odoo>