<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- DOCTOR VIEWS -->
    <record id="view_alan_doctor_kanban" model="ir.ui.view">
        <field name="name">alan.pharma.doctor.kanban</field>
        <field name="model">alan.pharma.doctor</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column" default_group_by="specialization">
                <!-- Declare fields used in template -->
                <field name="image"/>
                <field name="name"/>
                <field name="specialization"/>
                <field name="phone"/>
                <field name="email"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record">
                            <div class="o_kanban_image">
                                <img t-if="record.image.value"
                                     t-att-src="kanban_image('alan.pharma.doctor', 'image', record.id.value)"
                                     class="oe_kanban_avatar" alt="Doctor Image"/>
                            </div>
                            <div class="o_kanban_details">
                                <strong>
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="specialization"/>
                                </div>
                                <div>
                                    <i class="fa fa-phone"/>
                                    <field name="phone"/>
                                </div>
                                <div>
                                    <i class="fa fa-envelope"/>
                                    <field name="email"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="view_alan_doctor_list" model="ir.ui.view">
        <field name="name">alan.pharma.doctor.list</field>
        <field name="model">alan.pharma.doctor</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="specialization"/>
                <field name="phone"/>
            </list>
        </field>
    </record>

    <record id="view_alan_doctor_form" model="ir.ui.view">
        <field name="name">alan.pharma.doctor.form</field>
        <field name="model">alan.pharma.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="specialization"/>
                        <field name="phone"/>
                        <field name="email"/>
                    </group>
                    <group>
                        <field name="image" widget="image" class="oe_avatar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_alan_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">alan.pharma.doctor</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <menuitem id="menu_pharmacy_doctors" name="Doctors" parent="menu_pharmacy_root" action="action_alan_doctor"/>

</odoo>